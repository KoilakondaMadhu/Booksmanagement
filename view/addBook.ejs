<html>
    <head>
        <title>Add Books</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-image: url("../static/addimg.jpg");
                background-size: cover;
                background-repeat: no-repeat;
                margin: 0;
                padding: 0;
                text-align: center;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            
            form {
                background-color: rgb(162, 219, 255);
                min-width: 500px;
                max-width: 700px;
                margin-bottom: 60px;
                padding: 20px;
                border: 2px solid black;
                border-radius: 5px;
                box-shadow: 10px 10px 15px black;
            }
            
            h1 {
                color: #15a6e0;
            }
            
            input[type="text"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 3px;
                outline:none;
            }
            
            button {
                width: 100%;
                padding: 10px;
                background-color: lightseagreen;
                color: #fff;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }
            
            button:hover {
                opacity:0.8;
            }
            
            input::placeholder {
                color: rgba(20, 133, 133,0.6);
            }
            .all-books
            {
                display: flex;
                align-items: center;
                justify-content: center;
            }
            label {
                float: left;
                font-style: bold;
                font-size: 20px;
                padding-bottom: 2px;
            }
        </style>
    </head>
    <body>
        <%- include('layout_admin') %>
        <div class="all-books">
        <form action="/add-book" method="POST">
            <h2>Add Books</h2>
            <label>Title</label><br>
           <input type="text" name="title" placeholder="Enter Book title"/>
            <label>Author</label><br>
            <input type="text" name="author" placeholder="Enter Author name"/>
            <label>Isbn</label><br>
            <input type="text" name="isbn" placeholder="Enter ISBN"/>
            <label>Image Link</label><br>
            <input type="text" name="image" placeholder="Enter Image Link"/>
            <label>Price</label><br>
            <input type="text" name="price" placeholder="Enter Book Price"/>
            <label>Quantity</label><br>
            <input type="text" name="quantity" placeholder="Enter quantity"/>
            <button>Submit</button>
        </form>
    </div>
    </body>
</html>