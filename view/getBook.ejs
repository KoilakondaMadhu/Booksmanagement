<html>
    <head>
        <title>Get Books</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-image: url("../static/backimg.jpg");
                background-size: cover;
                color: #333;
                margin: 0;
                padding: 0;
            }
            
            h1 {
                background-color: rgba(0, 0, 0, 0.6);
                color: #ffffff;
                padding: 20px;
                margin: 0;
            }
            ul {
                list-style-type: none;
                padding: 0;
                display: flex;
                flex-direction: row;
                flex-wrap:wrap;
                margin-left:25px;
                margin-top:50px;
            }
            
            li.list {
                background-color: #fff;
                margin: 10px;
                padding: 30px;
                padding-bottom:10px;
                border: 2px solid black;
                border-radius: 30px;
                align-items: center;
                justify-content: center;
            }
            
            button {
                background-color: blue;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;}
                a{
                    text-decoration: none;
                    color:black;
                }
            
            p {
                margin: 5px 0;
                margin-top:10px;
                font-size:18px;
            }

            #quantity{
                padding:5px 10px;
                outline:none;
                margin-top:20px;
            }
            #submit{
                margin-top:10px;
                display:block;
            }
            form{
                margin-top:20px;
            }
            
                    </style>
    </head>
    <body>
        <%- include('layout') %>
        <h1>Book section</h1>
        <!-- <form action="/search-books" method="GET">
            <label for="search">Search Books: </label>
            <input type="text" id="search" name="query" placeholder="Enter book title or author">
            <button type="submit">Search</button>
        </form> -->
        <ul>
            <%for(i of books_list){%>
                <li class="list">
                    <img src= <%=i.image%> height="150px" width="200px"></img>
                    <p><strong>Title: </strong><%=i.title%></p>
                    <p><strong>Author: </strong><%=i.author%></p>
                    <p><strong>ISBN: </strong><%=i.isbn%></p>
                    <p><strong>Price: </strong><%=i.price%></p>
                    <p><strong>Quantity: </strong><%=i.quantity%></p>
                    <form action="/add-to-cart" method="POST">
                        <input type="hidden" name="book_data" value="<%= JSON.stringify(i) %>">
                        <label for="quantity"><strong>Enter Quantity:</strong></label>
                        <input type="number" id="quantity" name="quantity" min="1" value="1">
                        <button type="submit" id="submit">Add to Cart</button>
                    </form>
                </li>
            <%}%>
        </ul>
    </body>
</html>